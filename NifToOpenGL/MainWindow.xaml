<Window x:Class="Civ4NifReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Civ4 Nif Reader" Height="350" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnLoad" 
                Content="Open NIF File..." 
                HorizontalAlignment="Left" 
                Padding="10,5" 
                Click="BtnLoad_Click" Height="28" VerticalAlignment="Top"/>

        <Border Grid.Row="1" Margin="0,20,0,0" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            <StackPanel x:Name="pnlInfo" Visibility="Hidden">
                <TextBlock Text="File Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" TextDecorations="Underline"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Header String:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtHeaderString" TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Version (Hex):" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtVersion" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Blocks:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtNumBlocks" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="User Version:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtUserVersion" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Endian Type:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtEndian" Margin="0,5,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>